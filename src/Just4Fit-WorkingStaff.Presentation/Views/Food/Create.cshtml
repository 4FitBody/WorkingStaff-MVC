@{
    var food = new Food();
    ViewData["Title"] = "Add Food";
}

<h1 style="text-align: center; color: white;">@ViewData["Title"]</h1>


<div class="container">
    <form asp-controller="Food" asp-action="Create" enctype="multipart/form-data" method="post" style="color: white; margin-bottom: 300px;">
        <div class="row justify-content-center">
            <div>
                <div class="form-group">
                    <label class="form-label" asp-for="@food.Name">Name: </label>
                    <input class="form-control" type="text" asp-for="@food.Name" class="form-control" required>
                </div>

                <br>

                <div class="form-group">
                    <label class="form-label" asp-for="@food.ImageUrl">Image: </label>
                    <input class="form-control" type="file" accept="image/*" name="imageFile" class="form-control">
                </div>

                <br>

                <div class="form-group">
                    <label class="form-label" asp-for="@food.Description">Description: </label>
                    <input class="form-control" type="text" asp-for="@food.Description" class="form-control">
                </div>

                <br>

                <div class="form-group">
                    <label class="form-label" asp-for="@food.Diet">Diet: </label>
                    <select class="form-control" id="category" asp-for="@food.Diet" class="form-control">
                        <option value="Omnivore">Omnivore</option>
                        <option value="Vegetarian">Vegetarian</option>
                        <option value="Vegan">Vegan</option>
                        <option value="Paleo">Paleo</option>
                        <option value="Gluten-Free">Gluten-Free</option>
                        <option value="Whole30">Whole30</option>
                    </select>
                </div>

                <br>

                <div class="form-group">
                    <label class="form-label" asp-for="@food.VideoUrl">Video: </label>
                    <input class="form-control" type="file" accept="video/mp4,video/x-m4v,video/*" name="contentFile" class="form-control">
                </div>

                <br>

                <button type="submit" class="btn submit-button">Create</button>
            </div>
        </div>
    </form>
</div>