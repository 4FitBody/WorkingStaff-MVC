@model User

@{
    ViewData["Title"] = "Profile";
}

<div class="profile-div">
    <form class="profile-form">
        <p class="form-name">Profile</p>
        <input type="text" value="Name: @Model.UserName" readonly>
        <input type="email" value="Surname: @Model.Surname" readonly>
        <input type="email" value="Age: @Model.Age" readonly>
        <input type="email" value="Email: @Model.Email" readonly>
    </form>
</div>

<style>
    .profile-div {
        display: flex;
        flex-direction: column;
        font-size: 30px;
        margin-left: auto;
        margin-right: auto;
        margin-top: 75px;
        margin-bottom: 25%;
    }

    .profile-form p {
        font-weight: bold;
        color: white;
        font-size: 40px;
    }

    .profile-form {
        
        opacity: 0.8;
        position: relative;
        max-width: 360px;
        padding: 45px;
        text-align: center;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.3), 0 5px 5px 0 rgba(0, 0, 0, 0.34);
        border-radius: 15px;
    }

    .profile-form input,
    .profile-form textarea {
        outline: 0;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
        border-radius: 15px;
    }

    .profile-form button {
        text-transform: uppercase;
        outline: 0;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        border-radius: 15px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }
</style>