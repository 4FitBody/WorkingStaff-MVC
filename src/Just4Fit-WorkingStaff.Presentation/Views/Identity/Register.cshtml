@{
    ViewData["Title"] = "Register";

    var email = string.Empty;
    var name = string.Empty;
    var surname = string.Empty;
    var password = string.Empty;
    var age = 0;
}

<link rel='stylesheet' href='~/css/identity.css'>
<link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
<link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Poppins&amp;display=swap'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<div class="wrapper">
    <div class="login-box">
        <div class="login-header">
            <span>@ViewData["Title"]</span>
        </div>

        <form asp-action="Register" method="post">
            <div class="input-box">
                <input required asp-for="@email" type="email" class="input-field" required>
                <label asp-for="@email" class="label">Email</label>
            </div>

            <div class="input-box">
                <input required asp-for="@age" type="number" class="input-field" required>
                <label asp-for="@age" min="18" class="label">Age</label>
            </div>

            <div class="input-box">
                <input required asp-for="@name" type="text" class="input-field" required>
                <label asp-for="@name" class="label">Name</label>
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input-box">
                <input required asp-for="@surname" type="text" class="input-field" required>
                <label asp-for="@surname" class="label">Surname</label>
            </div>

            <div class="input-box">
                <input required id="pass" asp-for="@password" type="password" class="input-field" autocomplete="off" required>
                <label asp-for="@password" class="label">Password</label>
                <i class="bx bx-lock-alt icon" id="show-password"></i>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="input-box">
                <button type="submit" class="input-submit">Create Account</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}